{
  "extends": [
    "airbnb",
    "eslint-config-airbnb-typescript"
  ],
  "parserOptions": {
    "project": [
      "./tsconfig.json",
      "./tsconfig.node.json"
    ]
  },
  "rules": {
    "import/prefer-default-export": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-no-constructed-context-values": "off",
    "react/jsx-no-bind": "off"
  }
}